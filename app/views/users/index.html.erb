<h1>Users List View</h1>
<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>P5 Balance</th>
      <th>Reward Balance</th>
      <th>Login/Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.p5_balance %></td>
        <td><%= user.reward_balance %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New User', new_path %>
